<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Floating Buttons -->
    <style name="floatingButton">
        <item name="backgroundColor">@color/light_black</item>
        <item name="backgroundTint">@color/light_black</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- Buttons -->
    <style name="acceptButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>

    <style name="primaryButtonStyle">
        <item name="android:background">@drawable/background_rectangle</item>
        <item name="backgroundTint">@color/light_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>

</resources>
