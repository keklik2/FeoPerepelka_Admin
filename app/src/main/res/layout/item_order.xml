<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardBackgroundColor="@color/light_gray"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/entryTitleText.Order"
            tools:text="Заказ #1"/>

        <View
            android:id="@+id/horizontal_div_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/dark_gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_positions_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            app:layout_constraintTop_toBottomOf="@+id/horizontal_div_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_positions"

            style="@style/constText"
            android:textStyle="bold"
            android:text="@string/const_positions"/>

        <TextView
            android:id="@+id/tv_positions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_positions_const"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/constText"
            tools:text="Свежие перепела (2шт), Маринованые перепела (1шт),
            Паштет перепелиный (10шт), Паштет из мидий (4шт), Соус мёд-манго (5шт)"/>

        <TextView
            android:id="@+id/tv_client_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_positions"
            app:layout_constraintStart_toStartOf="parent"

            style="@style/constText"
            android:textStyle="bold"
            android:text="@string/const_client"/>

        <TextView
            android:id="@+id/tv_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_client_const"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/constText"
            tools:text="Пятничкин Вячеслав"/>

        <TextView
            android:id="@+id/tv_address_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_client"
            app:layout_constraintStart_toStartOf="parent"

            style="@style/constText"
            android:textStyle="bold"
            android:text="@string/const_address"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_address_const"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/constText"
            tools:text="г.Севастополь, ул.Сафронова, д.40"/>

        <TextView
            android:id="@+id/tv_description_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_address"
            app:layout_constraintStart_toStartOf="parent"

            style="@style/constText"
            android:textStyle="bold"
            android:text="@string/const_description"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_description_const"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/constText"
            tools:text="Звонить с 10:00 до 20:00 в любой день"/>

        <TextView
            android:id="@+id/tv_date_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            app:layout_constraintStart_toStartOf="parent"

            style="@style/constText"
            android:textStyle="bold"
            android:text="@string/const_date"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"

            app:layout_constraintTop_toBottomOf="@+id/tv_date_const"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/constText"
            tools:text="18.02.2022"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingHorizontal="16dp"

            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:drawableStart="@drawable/ic_phone"

            android:background="@drawable/background_rectangle"
            android:backgroundTint="@color/light_green"

            tools:text="+7(999)99-99-999"
            style="@style/constText.White"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
