<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardBackgroundColor="@color/light_gray"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sni_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sni_delete_position_button"
            app:layout_constraintBottom_toBottomOf="parent"

            style="@style/entryTitleText"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text = "Category 1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sni_delete_position_button"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="8dp"

            app:layout_constraintStart_toEndOf="@+id/sni_tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sni_tv_position_amount"
            app:layout_constraintBottom_toBottomOf="parent"

            android:background="@drawable/background_rectangle"
            android:backgroundTint="@color/light_black"
            android:gravity="center"

            android:text="@string/button_delete"
            style="@style/constText.White" />

        <TextView
            android:id="@+id/sni_tv_position_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="8dp"

            style="@style/entryTitleText"
            tools:text="2"

            app:layout_constraintStart_toEndOf="@+id/sni_delete_position_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sni_add_position_button"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sni_add_position_button"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="8dp"

            app:layout_constraintStart_toEndOf="@+id/sni_tv_position_amount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:background="@drawable/background_rectangle"
            android:backgroundTint="@color/light_black"
            android:gravity="center"

            android:text="@string/button_add"
            style="@style/constText.White" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
